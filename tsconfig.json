{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "app/components/PokemonList.jsx",
    "app/pokemons/[id].jsx",
    "app/(tabs)/_layout.jsx",
    "app/(tabs)/favourite.jsx"
  ]
}
